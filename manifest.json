{
	"manifest_version": 2,
	"name": "WikipediaMobile2Desktop",
	"description": "Automatically redirects Wikipedia to the desktop version from mobile.",
	"author": "Jathu Satkunarajah, Joshua Landman",
	"version": "2.1",
	"permissions": [
		"http://*.wikipedia.org/wiki/*",
		"https://*.wikipedia.org/wiki/*"
	],
	"content_scripts": [{
		"run_at": "document_start",
		"matches": [
			"http://*.wikipedia.org/wiki/*",
			"https://*.wikipedia.org/wiki/*"
		],
		"css": [
			"style.css"
		],
		"js": [
			"script.js"
		]
	}],
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	}
}
